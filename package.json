{
  "name": "linkedin-automation",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "playwright:install": "npx playwright install",
    "automation:dev": "tsx src/automation/index.ts",
    "health-check": "curl -f http://localhost:3000/api/health || exit 1",
    "validate-config": "tsx scripts/validate-config.ts",
    "setup-chrome": "node scripts/setup-chrome-profile.js",
    "test-browser": "tsx test-browser-profile.ts",
    "production:build": "npm ci --production=false && npx playwright install chromium && npm run test:ci && npm run build",
    "production:start": "npm run validate-config && npm start"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "next": "15.4.6",
    "playwright": "^1.54.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.11",
    "@types/puppeteer": "^5.4.7",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "jsdom": "^26.1.0",
    "tailwindcss": "^4",
    "tsx": "^4.20.4",
    "typescript": "^5"
  }
}
